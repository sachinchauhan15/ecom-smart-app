<%- include("../partials/header", { pageTitle: "Products" }) %>

<h1 class="mb-4">Our Products</h1>
<div class="row">
  <% products.forEach(p => { %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= p.name %></h5>
          <p class="card-text">$<%= p.price %></p>
          <a href="/products/<%= p.id %>" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include("../partials/footer") %>
